<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.postgraduate.entity.MsgEntity" table="msg" schema="postgraduate">
        <id name="msgId" column="msg_id"/>
        <property name="abs" column="abs"/>
        <property name="stuId" column="stu_id"/>
        <property name="teaId" column="tea_id"/>
        <property name="main" column="main"/>
        <property name="lastDate" column="last_date"/>
        <property name="read" column="read"/>
        <property name="flag" column="flag"/>
        <many-to-one name="studentByStuId"
                     insert="false" update="false"
                     class="com.postgraduate.entity.StudentEntity">
            <column name="stu_id"/>
        </many-to-one>
        <many-to-one name="teacherByTeaId"
                     insert="false" update="false"
                     class="com.postgraduate.entity.TeacherEntity">
            <column name="tea_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>